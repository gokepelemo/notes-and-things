<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>
<div class="content">
  <div class="row">
    <% if(book.photo) { %>
    <div class="col-lg-3">
      <img src="<%= book.photo %>" class="img-list" />
    </div>
    <% } %>
    <div class="col-lg-8<%= book.photo ? ' ps-4' : '' %>">
      <h3 class="lead content-lead"><%= book.name %></h3>
      <h5 class="book-author"><%= book.author %></h5>
      <div class="entity-actions">
        <ul class="nav nav-pills">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-body" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><span class="fas fa-share-nodes"></span> Share</a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#"><span class="fa-brands fa-x-twitter"></span> X</a></li>
              <li><a class="dropdown-item" href="#"><span class="fab fa-facebook-square"></span> Facebook</a></li>
              <li><a class="dropdown-item" href="#"><span class="fab fa-pinterest-square"></span> Pinterest</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link text-body" aria-current="page" href="#" target="_blank"><span class="fas fa-cart-shopping"></span> Buy on Amazon</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-body" aria-current="page" href="/books/<%= book.id %>/notes/new"><span class="fas fa-plus"></span> Add a Note</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="row book-list">
      <div class="col-md-12 align-middle">
        <% let noteVotes = {};
        vote.forEach((item) => {
          if (item.note.id) {
            let id = item.note.id;
            if(!noteVotes[id]) noteVotes[id] = 0;
            noteVotes[id] += 1;
          }
        });
       %>
        <% if(note) {%>
        <ul class="nav nav-pills nav-list">
          <li class="nav-item">
            <a class="nav-link text-white bg-black active" aria-current="page" href="#">Notes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-body" href="#">Book Lists</a>
          </li>
        </ul>
        <div class="list-group">
          <% if(note) {
          note.forEach((item) => {%>
          <a class="list-group-item list-group-item-action book-list-item" aria-current="true">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= item.title %></h5>
              <div class="action-buttons">
                <form method="POST" action="/notes/<%= item.id %>/votes" class="frm-action">
                  <button type="submit" class="btn btn-light btn-action"><%= noteVotes[item.id] ? noteVotes[item.id] : 0 %><span class="fas fa-thumbs-up"></span></button>
                </form>
              </div>
            </div>
            <p class="mb-1"><%= item.content %></p>
            <p class="mb-1">
              <span class="badge rounded-pill text-bg-secondary note-author"><%= item.user.name %></span>
              <% if(item.list) {%>
              <span class="badge rounded-pill text-bg-secondary note-list"><%= item.list.name %></span>
              <% } %>
            </p>
          </a>
          <% }); %>
        </div>
      </div>
      <%} else {%>
      <p>There are no notes added to this book.</p>
      <a href="/books/<%= book.id %>/notes/new"><button class="btn btn-primary">Add Notes</button></a>
      <% } %>
      <% } else {%>
      <p>There are no notes added to this book, and it isn't on any bookshelves.</p>
      <% }%>
    </div>
    <a href="<%= prev ? prev : "/books" %>" class="app-footer-link btn btn-secondary btn-sm"><span class="fas fa-caret-left"></span> Back <%= prev ? "" : "to Books" %></a>
    <%- include('../partials/footer.ejs') %>